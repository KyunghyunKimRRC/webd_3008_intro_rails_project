<% content_for(:html_title) {@pokemon.name} %>
<div>
    <div class="mx-3">
        <h2><%= @pokemon.name %></h2>
        <p><strong>Type: </strong><%= @type_name %></p>
        <p><strong>HP: </strong><%= @pokemon.hp %></p>
        <p><strong>Attack: </strong><%= @pokemon.attack %></p>
        <p><strong>Defense: </strong><%= @pokemon.defense %></p>
        <p><strong>Sp_Attack: </strong><%= @pokemon.sp_attack %></p>
        <p><strong>Sp_Defense: </strong><%= @pokemon.sp_defense %></p>
        <p><strong>Speed: </strong><%= @pokemon.speed %></p>
    </div>
</div>

<table class="table table-striped table-hover mx-3">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Power</th>
      <th scope="col">Accuracy</th>
      <th scope="col">Type</th>
    </tr>
  </thead>
    <tbody>
    <% @moves.each do |move| %>
    <tr>
      <td><%= link_to move.name, move, class: "text-decoration-none" %></td>
      <td><%= move.power %></td>
      <td><%= move.accuracy %></td>
      <td><%= @type_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
