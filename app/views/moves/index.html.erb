<h1 class="mx-3">Moves</h1>
<table class="table table-striped table-hover mx-3">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Type</th>
      <th scope="col">Power</th>
      <th scope="col">Accuracy</th>
      <th scope="col">PP</th>
    </tr>
  </thead>
    <tbody>
    <% @moves.each do |move| %>
    <tr>
      <td><%= link_to move.name, move, class: "text-decoration-none" %></td>
      <td><%= move.type.name %></td>
      <td><%= move.power %></td>
      <td><%= move.accuracy %></td>
      <td><%= move.pp %></td>
    </tr>
    <% end %>
  </tbody>
</table>