<% content_for(:html_title) {@move.name} %>
<div>
    <div class="mx-3">
        <h2><%= @move.name %></h2>
        <p><strong>Type: </strong><%= @type.name %></p>
        <p><strong>Power: </strong><%= @move.power %></p>
        <p><strong>Accuracy: </strong><%= @move.accuracy %></p>
        <p><strong>PP: </strong><%= @move.pp %></p>
    </div>
</div>
<h4 class="mx-3">List of Pokemon that can use this move</h4>
<table class="table table-striped table-hover mx-3">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">HP</th>
      <th scope="col">Attack</th>
      <th scope="col">Defense</th>
      <th scope="col">Sp_Attack</th>
      <th scope="col">Sp_Defense</th>
      <th scope="col">Speed</th>
    </tr>
  </thead>
    <tbody>
    <% @pokemons.each do |pokemon| %>
    <tr>
      <th scope="row"><%= pokemon.id %></th>
      <td><%= link_to pokemon.name, pokemon, class: "text-decoration-none" %></td>
      <td><%= pokemon.hp %></td>
      <td><%= pokemon.attack %></td>
      <td><%= pokemon.defense %></td>
      <td><%= pokemon.sp_attack %></td>
      <td><%= pokemon.sp_defense %></td>
      <td><%= pokemon.speed %></td>
    </tr>
    <% end %>
  </tbody>
</table>