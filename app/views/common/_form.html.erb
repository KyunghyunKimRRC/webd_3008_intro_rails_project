<%= form_with(url:search_pokemons_path, method: :get, local: true, class: "form my-2 my-lg-0") do %>
    <div class="row mx-1 my-3">
        <div class="col-2">
            <%= text_field_tag(:keywords, nil, class:"form-control mr-sm-2", placeholder: "Search Pokemon") %>
        </div>
        <div class="col">
            <%= submit_tag("Search", class: "btn btn-primary my-2 my-sm-0")%>
        </div>
    </div>
<% end %>